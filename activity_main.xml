<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"

    tools:context=".MainActivity">

    <EditText

        android:id="@+id/FirstContent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:hint="Enter First Content"
        android:layout_margin="10dp"
        android:inputType="text"
        android:text=""
        />

    <EditText

        android:id="@+id/SecondContent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FirstContent"
        android:ems="5"
        android:layout_margin="10dp"
        android:inputType="text"
        android:text=""
        android:hint="Enter Second Content"
        />

    <Button

        android:id="@+id/swapinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/FirstContent"
        android:layout_below="@+id/textView"
        android:text="SWAP"
        />

    <Button

        android:id="@+id/checkinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/SecondContent"
        android:layout_below="@+id/swapinput"
        android:text="CHECK"
        />

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />

</RelativeLayout>
